{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["package.json"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lobby:build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "game:build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false
    }
  }
}
